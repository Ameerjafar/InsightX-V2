generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default(uuid())
  email          String           @unique
  password       String
  Balance        Float
  freeMargin     Float
  lockedMargin   Float
  lastLoggedIn   DateTime
  existingTrades ExistingTrades[]
}

model Asset {
  id             String           @id @default(uuid())
  symbol         String
  imageUrl       String
  name           String
  decimal        Int
  existingTrades ExistingTrades[]
}

model ExistingTrades {
  id         String   @id @default(uuid())
  leverage   Float?
  type       String
  liquidated Boolean?
  quantity   Float
  createdAt  DateTime @default(now())

  asset   Asset   @relation(fields: [assetId], references: [id])
  assetId String
  user    User?   @relation(fields: [userId], references: [id])
  userId  String?
}
